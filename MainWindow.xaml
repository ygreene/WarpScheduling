                            </Grid.RowDefinitions>
                            <TextBox x:Name="priorityTextBox"  Text="{Binding Priority, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                        </Grid>
                        <Grid x:Name="grid4" HorizontalAlignment="Left" Margin="443,9,0,0" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="totalTicketsTextBlock" Text="{Binding TotalTickets}" />
                        </Grid>
                        <Grid x:Name="grid6"  HorizontalAlignment="Left" Margin="474,12,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2">
